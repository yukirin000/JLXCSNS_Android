<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    
	<include layout="@layout/layout_title_bar" />
	 <ScrollView 
	    android:background="@color/main_light_white"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	<LinearLayout 
	    android:id="@+id/topic_add_layout"
		android:focusable="true"  
        android:focusableInTouchMode="true"	    
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical">
		<ImageView
			android:layout_marginTop="60dip"	    
		    android:id="@+id/topic_image"
		    android:scaleType="centerCrop"
		    android:layout_width="100dip"
		    android:layout_height="100dip"
		    android:src="@drawable/abc_ab_bottom_solid_light_holo" />
	
		 <EditText
		 	android:focusable="true"  
		    android:focusableInTouchMode="true"		     
	        android:id="@+id/topic_name_edit_text"
			android:layout_marginTop="20dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/main_clear"
	        android:drawablePadding="10dp"
	        android:hint="请输入圈子名称"
	        android:maxLength="11"
	        android:padding="5dip"
	        android:singleLine="true"
	        android:textColor="@color/main_deep_black"
	        android:textSize="@dimen/font_size_medium" />
	    <ImageView
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="@drawable/login_edit_text_view" />  
	        
	    <EditText
	        android:id="@+id/topic_desc_edit_text"
	        android:layout_marginTop="20dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"
	        android:layout_width="match_parent"
	        android:layout_height="90dip"
	        android:gravity="top"
	        android:background="@drawable/comment_border"
	        android:hint="请输入圈子介绍 ..."
	        android:padding="7dip"
	        android:maxLength="140"
	        android:textSize="@dimen/font_size_small"
	        android:inputType="textMultiLine" >
	    </EditText>
	    	  
	    <TextView
	        android:id="@+id/topic_catagory_text_view"
	        android:background="@color/main_white"
	        android:text="选择类别"
	        android:textColor="@color/main_deep_black"
	        android:gravity="center_vertical"
	        android:paddingLeft="15dip"
			android:layout_marginTop="20dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"/>  
	          
    </LinearLayout>	    
	    
	</ScrollView>
	
						
</LinearLayout>

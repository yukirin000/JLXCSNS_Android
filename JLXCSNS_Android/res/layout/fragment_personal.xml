<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:app="http://schemas.android.com/apk/res/com.jlxc.app">
    
    <!-- 背景图 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/back_image_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

    </RelativeLayout>
     
    <com.jlxc.app.base.ui.view.CustomerScrollView
        
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:id="@+id/back_click_layout"
                android:layout_width="match_parent"
                android:layout_height="250dip" >

                <com.jlxc.app.base.ui.view.CircularImageView
                    android:id="@+id/head_image_view"
                    app:border_width="5dip"
                    app:border_color="#30ffffff"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/abc_ab_bottom_solid_dark_holo" />
            </RelativeLayout>
            
            <LinearLayout
                android:background="@color/main_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 我的相片 -->
                <LinearLayout
                    android:id="@+id/my_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_height="40dip" >
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="25dip"
	                        android:textColor="@color/main_brown"
	                        android:text="我的动态" />
	                    
                        <TextView
                            android:id="@+id/my_image_count_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip" />

                    </LinearLayout>
                    
                    <com.jlxc.app.base.ui.view.TouchInterceptGridView
                        android:id="@+id/my_image_grid_view"
                        android:layout_width="330dip"
                        android:layout_height="wrap_content"
                        android:stretchMode="spacingWidthUniform"
                        android:columnWidth="100dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="13dip"
                        android:numColumns="3" >
                    </com.jlxc.app.base.ui.view.TouchInterceptGridView>

                </LinearLayout>
                <!-- 最近来访 -->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/main_gary" />

                <LinearLayout
                    android:id="@+id/visit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="最近来访" />

                    <com.jlxc.app.base.ui.view.TouchInterceptGridView
                        android:id="@+id/visit_grid_view"
                        android:layout_width="200dip"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:numColumns="3" >
                    </com.jlxc.app.base.ui.view.TouchInterceptGridView>

                    <TextView
                        android:id="@+id/visit_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip" />
                </LinearLayout>
                <!-- 我的好友 -->

                <LinearLayout
                    android:id="@+id/friend_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="我的好友" />

                    <com.jlxc.app.base.ui.view.TouchInterceptGridView
                        android:id="@+id/friend_grid_view"
                        android:layout_width="200dip"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:numColumns="3" >
                    </com.jlxc.app.base.ui.view.TouchInterceptGridView>

                    <TextView
                        android:id="@+id/friend_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="@color/color_1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="个人信息" />
                </LinearLayout>
                <!-- 姓名 -->

                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="昵称" />

                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:text="测试" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/color_1" />
                <!-- 签名 -->

                <LinearLayout
                    android:id="@+id/sign_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="签名" />

                    <TextView
                        android:id="@+id/sign_text_view"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:text="你好啊 哈哈哈哈" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/color_1" />
                <!-- 生日 -->

                <LinearLayout
                    android:id="@+id/birth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="生日" />

                    <TextView
                        android:id="@+id/birth_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:text="1996-06-06" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/color_1" />
                <!-- 性别 -->

                <LinearLayout
                    android:id="@+id/sex_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/sex_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:text="女孩纸" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/color_1" />
                <!-- 学校 -->

                <LinearLayout
                    android:id="@+id/school_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="学校" />

                    <TextView
                        android:id="@+id/school_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:text="什么学校？？？？" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/color_1" />
                <!-- 城市 -->

                <LinearLayout
                    android:id="@+id/city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="城市" />

                    <TextView
                        android:id="@+id/city_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:text="北京" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/color_1" />
            </LinearLayout>
            
        </LinearLayout>
    </com.jlxc.app.base.ui.view.CustomerScrollView>
    
    <ImageButton
        android:id="@+id/card_Button"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:background="#00000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:src="@drawable/my_card"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/setting_Button"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/setting_btn"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp" />

</RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/main_light_gary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:background="@color/main_light_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <!-- 最近来访 -->

                    <RelativeLayout
                        android:id="@+id/visit_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_deep_white_click" >

                        <TextView
                            android:id="@+id/visit_count_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/visit_bottom_view"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/main_char_gary"
                            android:textSize="@dimen/font_size_sper_large" />

                        <LinearLayout
                            android:id="@+id/visit_bottom_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dip"
                                android:src="@drawable/my_visit_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="谁来看过我"
                                android:textColor="@color/main_brown"
                                android:textSize="@dimen/font_size_small" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="4dip"
                        android:layout_marginTop="4dip"
                        android:background="@color/main_light_gary" />

                    <!-- 我的好友 -->

                    <RelativeLayout
                        android:id="@+id/friend_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_deep_white_click" >

                        <TextView
                            android:id="@+id/friend_count_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/friend_bottom_view"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/main_char_gary"
                            android:textSize="@dimen/font_size_sper_large" />

                        <LinearLayout
                            android:id="@+id/friend_bottom_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dip"
                                android:src="@drawable/my_friends_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="我的朋友们"
                                android:textColor="@color/main_brown"
                                android:textSize="@dimen/font_size_small" />
                        </LinearLayout>
                    </RelativeLayout>


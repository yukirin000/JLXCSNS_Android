<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:app="http://schemas.android.com/apk/res/com.jlxc.app">
    
    <!-- 背景图 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/back_image_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

    </RelativeLayout>
     
    <com.jlxc.app.base.ui.view.CustomerScrollView
        android:scrollbars="none"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:id="@+id/back_click_layout"
                android:layout_width="match_parent"
                android:layout_height="260dip" >

                <com.jlxc.app.base.ui.view.CircularImageView
                    android:id="@+id/head_image_view"
                    app:border_width="5dip"
                    app:border_color="#30ffffff"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/abc_ab_bottom_solid_dark_holo" />
                
                <LinearLayout 
                    android:id="@+id/top_name_layout"
                    android:layout_below="@+id/head_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:gravity="center">
	                <TextView
	                    android:id="@+id/top_name_text_view"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/font_size_medium"
	                    android:textColor="@color/main_white"
	                    android:text="测试名字" />
	                <ImageView 
	                    android:id="@+id/sex_image_view"
	                    android:layout_marginLeft="5dip"
	                    android:layout_width="15dip"
	                    android:layout_height="15dip"
	                    android:src="@drawable/sex_boy"/>
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_below="@+id/top_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:gravity="center">
	                <TextView
	                    android:id="@+id/top_school_text_view"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/font_size_tiny"
	                    android:textColor="@color/main_white"
	                    android:text="广东省深圳市，罗湖中学" />
                </LinearLayout>
                
            </RelativeLayout>
            
            <LinearLayout
                android:background="@color/main_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 我的相片 -->
                <LinearLayout
                    android:id="@+id/my_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_height="40dip" >
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/my_images_icon"
                            android:layout_marginLeft="15dip" />
                        
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="5dip"
	                        android:textSize="@dimen/font_size_small"
	                        android:textColor="@color/main_brown"
	                        android:text="我的动态" />
	                    
						<RelativeLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content" >
						    
                            <TextView
                                android:id="@+id/my_image_count_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip" />

						    <ImageView
						        android:layout_width="15dp"
						        android:layout_height="15dp"
						        android:layout_alignParentRight="true"
						        android:layout_marginRight="10dp"
						        android:scaleType="fitCenter"
						        android:src="@drawable/right_arrow" />
						    
						</RelativeLayout>
                        
                    </LinearLayout>
                    
                    <com.jlxc.app.base.ui.view.TouchInterceptGridView
                        android:id="@+id/my_image_grid_view"
                        android:layout_width="320dip"
                        android:layout_height="wrap_content"
                        android:stretchMode="spacingWidthUniform"
                        android:columnWidth="100dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="13dip"
                        android:numColumns="3" >
                    </com.jlxc.app.base.ui.view.TouchInterceptGridView>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
					android:background="@color/main_light_gary" />
                <!-- 最近来访 -->
                <LinearLayout
                    android:id="@+id/visit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:layout_marginLeft="15dip"
                      android:src="@drawable/my_visit_icon" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_small"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/main_brown"
                        android:text="最近来访" />
                    
  					<RelativeLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content" >

					 <com.jlxc.app.base.ui.view.TouchInterceptGridView
					     android:id="@+id/visit_grid_view"
					     android:layout_width="wrap_content"
					     android:layout_height="match_parent"
					     android:layout_toLeftOf="@+id/visit_count_text_view"
					     android:layout_marginBottom="2dip"
					     android:layout_marginLeft="5dip"
					     android:layout_marginTop="5dip"
					     android:horizontalSpacing="3dip"
					     android:numColumns="4" >
					 </com.jlxc.app.base.ui.view.TouchInterceptGridView>

					 <TextView
					     android:id="@+id/visit_count_text_view"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:layout_toLeftOf="@+id/visit_arrow"
                         android:textSize="@dimen/font_size_small"
                         android:textColor="@color/main_char_gary"
					     android:layout_centerVertical="true"
					     android:layout_marginLeft="5dip" />

					 <ImageView
					     android:id="@+id/visit_arrow"
					     android:layout_width="15dp"
					     android:layout_height="15dp"
					     android:layout_centerVertical="true"
					     android:layout_alignParentRight="true"
					     android:layout_marginRight="10dp"
					     android:src="@drawable/right_arrow" />

					</RelativeLayout>
                    
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                         android:background="@color/main_light_gary" />
                <!-- 我的好友 -->
                <LinearLayout
                    android:id="@+id/friend_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dip"
                        android:src="@drawable/my_friends_icon" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:textSize="@dimen/font_size_small"
                        android:textColor="@color/main_brown"
                        android:text="我的好友" />
                    
                    <RelativeLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content" >

					 <com.jlxc.app.base.ui.view.TouchInterceptGridView
					     android:id="@+id/friend_grid_view"
					     android:layout_width="wrap_content"
					     android:layout_height="match_parent"
					     android:layout_toLeftOf="@+id/friend_count_text_view"
					     android:layout_marginBottom="2dip"
					     android:layout_marginLeft="5dip"
					     android:layout_marginTop="5dip"
					     android:horizontalSpacing="3dip"
					     android:numColumns="4" >
					 </com.jlxc.app.base.ui.view.TouchInterceptGridView>

					 <TextView
					     android:id="@+id/friend_count_text_view"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:layout_toLeftOf="@+id/friend_arrow"
					     android:textSize="@dimen/font_size_small"
                         android:textColor="@color/main_char_gary"
					     android:layout_centerVertical="true"
					     android:layout_marginLeft="5dip" />

					 <ImageView
					     android:id="@+id/friend_arrow"
					     android:layout_width="15dp"
					     android:layout_height="15dp"
					     android:layout_centerVertical="true"
					     android:layout_alignParentRight="true"
					     android:layout_marginRight="10dp"
					     android:src="@drawable/right_arrow" />

					</RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:background="@color/main_light_white"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginBottom="3dip"
                        android:textColor="@color/main_char_gary"
                        android:textSize="@dimen/font_size_tiny" 
                        android:text="我的资料" />
                </LinearLayout>
               
            <!-- 个人信息layout -->
			<include layout="@layout/personal_information_layout"/>

            </LinearLayout>
            
        </LinearLayout>
    </com.jlxc.app.base.ui.view.CustomerScrollView>
    
    <ImageButton
        android:id="@+id/card_Button"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:background="#00000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:src="@drawable/my_card"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/setting_Button"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/setting_btn"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.jlxc.app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:paddingTop="10dp">
	    <com.jlxc.app.base.ui.view.RoundImageView
	        app:rect_adius="1dip"
	        android:id="@+id/head_image_view"
	        android:layout_width="45dip"
	        android:layout_height="45dip"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/abc_ab_bottom_solid_light_holo" />
	
	    <TextView
	        android:id="@+id/name_text_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="@dimen/font_size_small"
	        android:textColor="@color/main_deep_black"
	        android:layout_toRightOf="@+id/head_image_view"
	        android:text="测试姓名" />

	    <ImageView
	        android:src="@drawable/friend_btn_add_normal"
	        android:padding="5dip"
	        android:id="@+id/add_image_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dip"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true" />
	    
		<View
            android:layout_width="fill_parent"
            android:layout_below="@+id/head_image_view"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
			android:background="@color/main_light_gary" />		    

	</RelativeLayout>
    
</LinearLayout>


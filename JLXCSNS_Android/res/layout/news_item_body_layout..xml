<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_news_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="文字内容文字内容文字内容文字内容文字内容文字内容文字内容文字内容文字内容文字内容文字内容文字内容"
            android:textColor="#6b717b"
            android:textSize="13dp" />
    </LinearLayout>

    <com.jlxc.app.base.ui.view.NoScrollGridView
        android:id="@+id/gv_news_body_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:src="@drawable/ic_launcher"
        android:verticalSpacing="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 发布的位置 -->

        <TextView
            android:id="@+id/txt_news_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地理位置" />
    </LinearLayout>

</LinearLayout>
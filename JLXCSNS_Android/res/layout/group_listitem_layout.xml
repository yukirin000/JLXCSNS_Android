<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_light_white"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/layout_group_Listitem_rootview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/selector_deep_white_click"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_group_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_group_icon" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/txt_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="我的圈子"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/txt_group_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:text="122人关注"
                android:textColor="@color/main_brown"
                android:textSize="@dimen/font_size_small" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_group_unread_news_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/big_unread"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/main_white"
            android:textSize="@dimen/font_size_tiny" />
    </LinearLayout>

</LinearLayout>
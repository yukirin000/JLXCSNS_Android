<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_deep_white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/campus_background" />

        <TextView
            android:id="@+id/tv_campus_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="深圳市高级中学"
            android:background="@drawable/campus_name_background"
            android:textColor="@color/main_deep_white"
            android:textSize="@dimen/font_size_sper_large" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_campus_person_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/campus_person_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_interior_space_medium"
        android:text="校内小伙伴"
        android:textColor="@color/main_deep_black"
        android:textSize="@dimen/font_size_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:id="@+id/hsv_person_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/item_interior_space_medium"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/liear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.jlxc.app.base.ui.view.NoScrollGridView
                    android:id="@+id/gv_school_person"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:src="@drawable/ic_launcher"
                    android:stretchMode="spacingWidthUniform" >
                </com.jlxc.app.base.ui.view.NoScrollGridView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_light_white"
        android:orientation="vertical"
        android:paddingBottom="1dp" >

        <View
            android:id="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_interior_space_medium"
            android:background="@color/main_light_white" />

        <TextView
            android:id="@+id/tv_campus_news_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/campus_news_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_interior_space_medium"
            android:text="校内新鲜事"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

</LinearLayout>
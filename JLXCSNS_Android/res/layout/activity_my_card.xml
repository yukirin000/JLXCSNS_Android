<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/my_card_layout"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_bar" />
    
    <ImageView
        android:layout_marginTop="30dip"
        android:id="@+id/head_image_view"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/abc_ab_bottom_solid_light_holo" />

    <TextView
        android:layout_marginTop="5dip"
        android:textSize="22sp"
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字" />

    <FrameLayout
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >

        <TextView
            android:visibility="gone"
            android:id="@+id/helloha_text_view"
            android:textSize="17sp"
			android:layout_gravity="center"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="helloHa号" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/helloha_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:gravity="center">
            <EditText
            android:id="@+id/helloha_edit_text"
            android:textSize="17sp"
            android:maxLength="20"
            android:hint="请设置号码poi~"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            />
            <requestFocus />
		   <Button
		   android:layout_marginLeft="10dip"
           android:id="@+id/helloha_button"
		   android:layout_gravity="center"            
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="helloHa号" />          
        </LinearLayout>

        <Button
           android:id="@+id/set_button"
           android:visibility="gone"
		   android:layout_gravity="center"            
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="点击设置HelloHa号" />
        
    </FrameLayout>

    <ImageView
        android:layout_marginTop="10dip"
        android:id="@+id/qrcode_image_view"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:src="@drawable/abc_ab_bottom_solid_light_holo" />

    <TextView
        android:layout_marginTop="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫二维码，加我为HelloHa好友" />

</LinearLayout>

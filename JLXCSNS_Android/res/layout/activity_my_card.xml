<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
		    <com.jlxc.app.base.ui.view.CircularImageView
		        android:id="@+id/head_image_view"
		        android:layout_width="100dip"
		        android:layout_height="100dip"
		        android:layout_marginTop="30dip"
		        android:src="@drawable/abc_ab_bottom_solid_light_holo" />
		
		    <TextView
		        android:layout_marginTop="5dip"
		        android:textSize="@dimen/font_size_medium"
		        android:textColor="@color/main_deep_black"
		        android:id="@+id/name_text_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="名字" />
		    		    
		    
		    <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip" >
		
		        <TextView
		            android:id="@+id/helloha_text_view"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:textColor="@color/main_deep_black"
		            android:text="helloHa号"
		            android:textSize="@dimen/font_size_medium"
		            android:visibility="gone" />
		
		        <!-- android:visibility="gone" -->
		
		        <LinearLayout
		            android:id="@+id/helloha_layout"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:visibility="gone" >
		
		            <EditText
		                android:id="@+id/helloha_edit_text"
		                android:layout_width="150dip"
		                android:layout_height="30dip"
		                android:background="@color/main_light_gary"
		                android:hint="  请设置号码poi~"
		                android:maxLength="20"
		                android:textSize="@dimen/font_size_small" />
		
		            <Button
		                android:id="@+id/helloha_button"
		                android:layout_width="wrap_content"
		                android:layout_height="30dip"
		                android:layout_gravity="center"
		                android:layout_marginLeft="15dip"
		                android:background="@color/main_card_green"
		                android:paddingLeft="10dip"
		                android:paddingRight="10dip"
		                android:text="保存"
		                android:textColor="@color/main_white"
		                android:textSize="@dimen/font_size_small" />
		        </LinearLayout>
		
		        <Button
		            android:id="@+id/set_button"
		            android:padding="8dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:background="@color/main_brown"
		            android:text="设置HelloHa账号名称"
		            android:textColor="@color/main_white"
		            android:visibility="gone" />
		    </FrameLayout>
		
		    <ImageView
		        android:id="@+id/qrcode_image_view"
		        android:layout_width="250dip"
		        android:layout_height="250dip"
		        android:src="@drawable/abc_ab_bottom_solid_light_holo" />
		
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="扫一扫二维码，加我为HelloHa好友" />            
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_gary"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topic_news_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaFFFFFF"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/topic_desc_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="vvv "
            android:textColor="@color/main_blue"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/topic_top_btn_text_view"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_main_yellow_click"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/main_brown"
            android:textSize="@dimen/font_size_tiny" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#caFFFFFF"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_group_news_operate_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_deep_white"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/news_item_margins_left"
        android:paddingRight="@dimen/news_item_margins_right" >

        <TextView
            android:id="@+id/txt_group_news_publish_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/item_interior_space_small"
            android:text="时间"
            android:textColor="@color/main_gary"
            android:textSize="@dimen/font_size_tiny" />

        <!-- 评论按钮 -->

        <com.jlxc.app.news.ui.view.CommentButton
            android:id="@+id/btn_group_reply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <!-- 点赞按钮 -->

        <com.jlxc.app.news.ui.view.LikeButton
            android:id="@+id/btn_group_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_item_margins_top"
        android:layout_marginTop="@dimen/item_interior_space_small"
        android:background="@color/main_light_white" />

</LinearLayout>
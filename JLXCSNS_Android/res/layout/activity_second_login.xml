<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/second_login_activity"
    android:gravity="center_horizontal">
    
	<ImageView
	    android:src="@drawable/login_back_image"
	    android:scaleType="centerCrop" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
    
    <include layout="@layout/layout_title_bar" />

    
       <EditText
           android:id="@+id/passwordEt"
           android:layout_width="280dip"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="150dip"
           android:drawablePadding="10dp"
           android:padding="5dip"
           android:background="@color/main_clear"
           android:hint="请输入密码"
           android:textColorHint="@color/login_edit_hint_color"   
           android:textColor="@color/main_deep_black"      
           android:singleLine="true"
           android:inputType="textPassword"
           android:textSize="@dimen/font_size_medium" />    
       <ImageView
           android:layout_alignLeft="@+id/passwordEt"
           android:layout_below="@+id/passwordEt" 
           android:background="@drawable/login_edit_text_view"
           android:layout_width="280dip"
           android:layout_height="1dip"/>    

       <Button
           android:layout_centerHorizontal="true"
           android:id="@+id/loginBtn"
           android:layout_below="@id/passwordEt"
           android:textSize="@dimen/font_size_small"
           android:textColor="@color/main_brown"
           android:layout_width="280dip"
           android:background="@drawable/login_button"
           android:layout_height="45dip"
           android:layout_marginTop="30dip"
           android:text="下一步" />    

    <LinearLayout
        android:layout_marginBottom="30dip"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/find_pwd_text_view"
            android:textColor="@color/login_edit_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_small" 
            android:text="啊咧，忘记密码?" />
    </LinearLayout>
       
</RelativeLayout>


    
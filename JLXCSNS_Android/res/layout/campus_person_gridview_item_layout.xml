<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.jlxc.app"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <com.jlxc.app.base.ui.view.RoundImageView
        android:id="@+id/iv_campus_person_head"
        android:layout_width="@dimen/head_image_size_huge"
        android:layout_height="@dimen/head_image_size_huge"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"
        app:rect_adius="2dp" />

    <TextView
        android:id="@+id/txt_campus_person_name"
        android:layout_width="@dimen/head_image_size_huge"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="@dimen/item_interior_space_small"
        android:paddingRight="@dimen/item_interior_space_small"
        android:text="昵称"
        android:textColor="@color/main_deep_black"
        android:textSize="@dimen/font_size_small" />

</LinearLayout>
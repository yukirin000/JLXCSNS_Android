<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_alert_dialog_background"
        android:layout_width="290dip"
        android:layout_centerHorizontal="true"
        android:layout_height="170dip"
        android:background="@drawable/alert_dialog_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_interior_size_medium"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dialog_interior_size_small"
        android:paddingRight="@dimen/dialog_interior_size_small" >

        <TextView
            android:id="@+id/tv_custom_alert_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已经发送验证码 "
            android:textColor="@color/main_brown"
            android:textSize="@dimen/font_size_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_interior_size_large"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_custom_alert_dialog_cancel"
            android:layout_width="@dimen/dialog_interior_size_large"
            android:layout_height="@dimen/dialog_interior_size_secondary"
            android:background="@drawable/selector_dialog_cancel_btn_click"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:id="@+id/view_space"
            android:layout_width="@dimen/dialog_interior_size_small"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_custom_alert_dialog_confirm"
            android:layout_width="@dimen/dialog_interior_size_large"
            android:layout_height="@dimen/dialog_interior_size_secondary"
            android:background="@drawable/selector_dialog_confirm_btn_click"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

</RelativeLayout>
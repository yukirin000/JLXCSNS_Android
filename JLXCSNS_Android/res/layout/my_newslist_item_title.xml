<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_my_news_list_title_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_light_white"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/item_interior_space_medium" >

    <!-- 用户头像 -->

    <FrameLayout
        android:layout_width="@dimen/item_interior_space_huge"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/iv_time_line_backgroung"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/time_line"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_my_news_list_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/time_point" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_interior_space_medium"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="@dimen/item_interior_space_medium" >

        <!-- 昵称 -->

        <TextView
            android:id="@+id/txt_my_news_list_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/main_light_black"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/txt_my_news_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:text="名字"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/multi_background_head" />
    </LinearLayout>

</LinearLayout>
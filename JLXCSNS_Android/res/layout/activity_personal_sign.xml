<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/main_light_white"
    android:id="@+id/personal_sign_activity">
    
    <include layout="@layout/layout_title_bar" />

    <EditText
        android:gravity="top"
        android:maxLength="60"
        android:textColor="@color/main_deep_black"
        android:textSize="@dimen/font_size_medium"
        android:id="@+id/sign_edit_text"
        android:hint="来个牛逼的签名..."
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="@drawable/comment_border_view"
        android:inputType="textMultiLine" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/layout_item_background"
        android:layout_width="match_parent"
        android:background="@color/main_deep_white"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/category_cover_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/category_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/main_deep_white"
                android:textSize="@dimen/font_size_huge" />

            <TextView
                android:id="@+id/category_detail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="描述描述描述描述描述描述描述描述描述描述"
                android:textColor="@color/main_deep_white"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:background="@color/main_light_gary" />

</LinearLayout>
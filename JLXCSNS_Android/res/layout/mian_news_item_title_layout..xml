<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_news_title_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp" >

    <!-- 用户头像 -->

    <com.jlxc.app.base.ui.view.RoundImageView
        android:id="@+id/img_mian_news_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <!-- 昵称 -->

        <TextView
            android:id="@+id/txt_main_news_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="#424d54"
            android:textSize="18sp" />
        <!-- 标签 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_main_news_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#424d54"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_main_news_user_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/school_icon"
                android:paddingLeft="10dp"
                android:drawablePadding="5dp"
                android:text="标签"
                android:textColor="#424d54"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
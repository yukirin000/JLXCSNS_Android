<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_news_title_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_deep_white"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/news_item_margins_left"
    android:paddingRight="@dimen/news_item_margins_right"
    android:paddingTop="@dimen/news_item_margins_top" >

    <!-- 用户头像 -->

    <com.jlxc.app.base.ui.view.RoundImageView
        android:id="@+id/img_mian_news_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <!-- 昵称 -->

        <TextView
            android:id="@+id/txt_main_news_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />
        <!-- 标签 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_main_news_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="@color/main_gary"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/txt_main_news_user_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/school_icon"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:text="标签"
                android:textColor="@color/main_gary"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
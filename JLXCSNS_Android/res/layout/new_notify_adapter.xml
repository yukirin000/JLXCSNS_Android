<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_white"
    android:layout_height="wrap_content"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.jlxc.app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <com.jlxc.app.base.ui.view.RoundImageView
            app:rect_adius="2dip"
            android:id="@+id/head_image_view"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/name_text_view"
            android:textColor="@color/main_brown"
            android:textSize="@dimen/font_size_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名" />
            
            <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/framelayout"
            android:layout_marginRight="10dp"
            android:id="@+id/content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_small"            
            android:text="内容内容内容内容内容内容内容内容容内容内" />
            
            
            <TextView
            android:layout_alignLeft="@+id/name_text_view"
            android:layout_below="@+id/content_text_view"
            android:textColor="@color/main_deep_gary"
            android:textSize="@dimen/font_size_tiny"
            android:layout_marginTop="5dp"
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-05-05" />            

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="3dp"
                android:background="@color/main_light_gary"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" >
                
                <TextView
                android:visibility="gone"
	            android:layout_marginLeft="5dp"
	            android:layout_marginBottom="10dp"
	            android:textSize="@dimen/font_size_micro"
	            android:textColor="@color/main_deep_black"
	            android:id="@+id/news_text_view"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="内容内容内容内容内容" />
                
                <ImageView
                android:visibility="gone"
	            android:id="@+id/news_image_view"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:scaleType="centerCrop"
	            android:src="@drawable/abc_ab_bottom_solid_light_holo" />
                
            </FrameLayout>
            
        </RelativeLayout>

    </LinearLayout>
    
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:layout_marginLeft="10dip"
	    android:background="@color/main_light_gary" />    

</LinearLayout>
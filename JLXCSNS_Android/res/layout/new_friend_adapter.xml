<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.jlxc.app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_deep_white_click"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dip" >

        <com.jlxc.app.base.ui.view.RoundImageView
            android:id="@+id/head_image_view"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/abc_ab_bottom_solid_light_holo"
            app:rect_adius="2dip" />

        <ImageView
            android:id="@+id/unread_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip"
            android:src="@drawable/small_unread"
            android:visibility="gone" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/head_image_view"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/head_image_view"
            android:text="测试姓名"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />

        <!--
             <TextView
	        android:id="@+id/time_text_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/name_text_view"
	        android:layout_alignBottom="@+id/head_image_view"
	        android:layout_marginBottom="5dip"
	        android:text="2015-05-05" />
        -->

        <TextView
            android:id="@+id/add_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@color/color_3"
            android:padding="5dip"
            android:text="添加"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head_image_view"
            android:layout_alignLeft="@+id/name_text_view"
            android:layout_marginBottom="0dip"
            android:text="19:00"
            android:textColor="@color/main_deep_gary"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head_image_view"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/time_text_view"
            android:text="添加了你为好友"
            android:textColor="@color/main_deep_gary"
            android:textSize="@dimen/font_size_small" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:background="@color/main_light_gary" />

</LinearLayout>
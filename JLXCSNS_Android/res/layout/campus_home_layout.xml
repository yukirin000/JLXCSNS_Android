<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_deep_white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/campus_background" />
		<LinearLayout 
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/campus_name_background"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_campus_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="深圳市高级中学"
            android:textColor="@color/main_deep_white"
            android:textSize="@dimen/font_size_sper_large" />	
            	    
        <TextView
            android:id="@+id/school_location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="深圳●南山"
            android:textColor="@color/main_deep_white"
            android:background="@color/main_blue"
            android:textSize="@dimen/font_size_small" />			    

		</LinearLayout>

    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/tv_campus_person_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_interior_space_medium"
        android:text="本校的帅锅与美女 (•'◡'•)ﾉ"
        android:textColor="@color/main_deep_black"
        android:layout_weight="1"
        android:textSize="@dimen/font_size_medium" />		
	<TextView
	    android:layout_weight="1"
        android:id="@+id/student_count_text_view"
        android:paddingRight="10dip"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:text="1000人"
        android:textColor="@color/main_yellow"
        android:textSize="@dimen/font_size_tiny" />        
	</LinearLayout>
	<View 
	    android:layout_height="1dip"
	    android:layout_width="match_parent"
	    android:background="@color/main_light_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:id="@+id/hsv_person_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/item_interior_space_medium"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/liear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.jlxc.app.base.ui.view.NoScrollGridView
                    android:id="@+id/gv_school_person"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:src="@drawable/ic_launcher"
                    android:stretchMode="spacingWidthUniform" >
                </com.jlxc.app.base.ui.view.NoScrollGridView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_light_white"
        android:orientation="vertical"
        android:paddingBottom="1dp" >

        <View
            android:id="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_interior_space_medium"
            android:background="@color/main_light_white" />
	    <RelativeLayout
	        android:id="@+id/unread_news_layout"
	        android:background="@color/main_white"
	        android:gravity="center"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:orientation="horizontal" >
            
 		<TextView
            android:id="@+id/tv_campus_news_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/campus_title_high"
            android:layout_toLeftOf="@+id/unread_news_count_text_view"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_interior_space_medium"
            android:text="帅锅美女们的日常  (•ㅂ•)/"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />
 		
		<TextView
		    android:id="@+id/unread_news_count_text_view"
	        android:background="@drawable/big_unread"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:text="99"
	        android:textColor="@color/main_white"
	        android:textSize="@dimen/font_size_tiny" />     	        
	        
		</RelativeLayout>

    </LinearLayout>

</LinearLayout>
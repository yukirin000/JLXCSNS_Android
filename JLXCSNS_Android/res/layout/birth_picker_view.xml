<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_background"
    android:orientation="vertical" >

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_custom_alert_dialog_cancel"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_dialog_cancel_btn_click"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:id="@+id/view_space"
            android:layout_width="40dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_custom_alert_dialog_confirm"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_dialog_confirm_btn_click"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>  

</LinearLayout>
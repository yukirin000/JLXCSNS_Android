<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E9E9E9"
    android:orientation="vertical"
    android:paddingTop="20dip" >

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#E9E9E9"
	    android:orientation="horizontal" >
        <com.jlxc.app.personal.ui.view.cityView.WheelView
            android:id="@+id/id_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.jlxc.app.personal.ui.view.cityView.WheelView>

        <com.jlxc.app.personal.ui.view.cityView.WheelView
            android:id="@+id/id_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.jlxc.app.personal.ui.view.cityView.WheelView>	    
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_custom_alert_dialog_cancel"
            android:layout_width="@dimen/dialog_interior_size_large"
            android:layout_height="@dimen/dialog_interior_size_secondary"
            android:background="@drawable/selector_dialog_cancel_btn_click"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:id="@+id/view_space"
            android:layout_width="@dimen/dialog_interior_size_small"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_custom_alert_dialog_confirm"
            android:layout_width="@dimen/dialog_interior_size_large"
            android:layout_height="@dimen/dialog_interior_size_secondary"
            android:background="@drawable/selector_dialog_confirm_btn_click"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>           
        
</LinearLayout>
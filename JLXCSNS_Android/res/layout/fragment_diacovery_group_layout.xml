<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height_size"
        android:background="@color/main_yellow"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_group_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_top_bar_category" />

        <TextView
            android:id="@+id/tv_discovey_group_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发现兴趣圈子"
            android:textColor="@color/main_brown"
            android:textSize="@dimen/action_bar_title_size" />

        <ImageButton
            android:id="@+id/btn_create_new_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/title_interior_size_mediu"
            android:background="@color/main_clear"
            android:padding="@dimen/title_interior_size_mediu"
            android:src="@drawable/add_friend_content_image" />
    </LinearLayout>

    <com.jlxc.app.group.view.LoopViewPager
        android:id="@+id/loop_view_page_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.jlxc.app.group.view.LoopViewPager>

</LinearLayout>
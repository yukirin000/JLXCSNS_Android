<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <!-- 用户头像 -->

    <ImageView
        android:id="@+id/img_news_detail_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/name_tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_news_detail_user_head"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <!-- 昵称 -->

        <TextView
            android:id="@+id/txt_news_detail_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="#424d54"
            android:textSize="15dp" />
        <!-- 标签 -->

        <TextView
            android:id="@+id/txt_news_detail_user_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"
            android:textColor="#424d54"
            android:textSize="15dp" />
    </LinearLayout>
    <!-- 时间 -->

    <TextView
        android:id="@+id/txt_news_detail_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name_tag_layout"
        android:paddingLeft="10dp"
        android:text="时间"
        android:textColor="#424d54"
        android:textSize="15dp" />

    <!-- 点赞按钮 -->

    <Button
        android:id="@+id/btn_news_detail_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_tag_layout"
        android:layout_alignParentRight="true"
        android:text="Button" />

</RelativeLayout>
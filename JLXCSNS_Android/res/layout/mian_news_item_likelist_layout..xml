<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/main_background"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp" >

    <TextView
         android:id="@+id/tv_like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/like_icon"
        android:drawablePadding="5dp"
        android:gravity="center" />
    <!-- 主页点赞头像列表 -->

    <com.jlxc.app.base.ui.view.NoScrollGridView
        android:id="@+id/gv_mian_Like_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="4dp"
        android:numColumns="10"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_news_like_all_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/all_like_person"
            android:gravity="center"
            android:text="22" />
    </LinearLayout>

</LinearLayout>
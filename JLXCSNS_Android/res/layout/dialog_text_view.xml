<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:background="@color/main_white"
android:layout_width = "fill_parent"
android:layout_height = "fill_parent">

    <TextView
        android:paddingLeft="20dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/main_brown"
        android:background="@color/main_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改昵称╮(╯_╰)╭" />       
    
	<EditText
	   android:layout_marginTop="20dip"
	   android:id = "@+id/name_edit_text"
	   android:layout_marginLeft="20dip"
	   android:layout_marginRight="20dip"
	   android:hint="请输入爆炸昵称！"
	   android:textColorHint="@color/main_deep_gary"
	   android:textColor="@color/main_light_black"
	   android:layout_width = "fill_parent"
	   android:layout_height = "wrap_content"
	   android:background="@color/main_white"
	   android:gravity = "left"
	   android:inputType="text"/>
	
    <View
       android:background="@color/main_deep_gary"
       android:layout_width="fill_parent"
	   android:layout_marginLeft="20dip"
	   android:layout_marginRight="20dip"       
       android:layout_height="1dip"/>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_custom_alert_dialog_cancel"
            android:layout_width="@dimen/dialog_interior_size_large"
            android:layout_height="@dimen/dialog_interior_size_secondary"
            android:background="@drawable/selector_dialog_cancel_btn_click"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:id="@+id/view_space"
            android:layout_width="@dimen/dialog_interior_size_small"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_custom_alert_dialog_confirm"
            android:layout_width="@dimen/dialog_interior_size_large"
            android:layout_height="@dimen/dialog_interior_size_secondary"
            android:background="@drawable/selector_dialog_confirm_btn_click"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>   

</LinearLayout>
